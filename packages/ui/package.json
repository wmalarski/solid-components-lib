		"@solidjs/testing-library": "0.8.10",
		"vite-plugin-solid": "2.10.2",
		"@vitest/coverage-v8": "^2.1.4",
		"autoprefixer": "^10.4.20",
		"jsdom": "^25.0.1",
		"postcss": "^8.4.47",
		"tailwindcss": "^3.4.14",
		"rollup-preset-solid": "2.0.1",
		"rollup-plugin-terser": "7.0.2",
		"rollup-plugin-postcss": "4.0.2",
